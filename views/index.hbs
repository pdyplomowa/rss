<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Aplikacja RSS</title>
  <meta name="description"
        content="Aplikacja RSS">
  <meta name="author"
        content="Krystian ANtkowiak">
</head>

<body>
  <form method="POST"
        action="/save">
    <label for="url">Url</label>
    <input id="url"
           name="url">
    <label for="email">Email</label>
    <input type="email"
           id="email"
           name="email"
           value="{{ email.name }}">
    <input type="submit"
           value="Save">
  </form>
  <form method="POST"
        action="/send">
    <input type="submit"
           value="Send">
  </form>
  <h3>RSS urls</h3>
  <ul>
    {{#each urls}}
    <li>
      <form method="POST"
            action="/delete">
        <input type="hidden"
               name="id"
               value="{{this._id}}">
        <input type="submit"
               value="Delete"
               name="delete">
        <span>{{this.name}}</span>
      </form>

    </li>
    {{/each}}
  </ul>
  <h3>Email View</h3>
  {{{ emailView }}}
</body>
<script>
  const email = document.getElementById('email');
  if (email.value) {
    email.disabled = true;
  }
</script>

</html>